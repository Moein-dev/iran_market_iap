<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.market.iap">

    <!-- Permissions required for in-app billing -->
    <uses-permission android:name="com.farsitel.bazaar.permission.PAYMENT" />
    <uses-permission android:name="ir.mservices.market.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <!-- Plugin registration -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Queries for Android 11+ to access market apps -->
    <queries>
        <package android:name="com.farsitel.bazaar" />
        <package android:name="ir.mservices.market" />
        <intent>
            <action android:name="ir.cafebazaar.pardakht.InAppBillingService.BIND" />
            <data android:mimeType="*/*" />
        </intent>
        <intent>
            <action android:name="ir.mservices.market.InAppBillingService.BIND" />
            <data android:mimeType="*/*" />
        </intent>
    </queries>

</manifest>
